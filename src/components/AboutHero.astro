---
interface Props {
  bg?: string;
  eyebrow?: string;
  titleLine1?: string;
  titleLine2?: string;
}

const {
  bg = "/src/assets/images/abouthero.jpg",
  eyebrow = "About",
  titleLine1 = "Creative Services For Boost",
  titleLine2 = "Your Business Growth",
} = Astro.props as Props;
---

<section class="about-hero">
  <img src={bg} alt="" class="hero-bg" />

  <div class="hero-content">
    <span class="eyebrow">{eyebrow}</span>

    <div class="title-box">
      <h1 class="title">
        <span>{titleLine1}</span>
        <span>{titleLine2}</span>
      </h1>
    </div>
  </div>
</section>

<style>
  .about-hero {
    position: relative;
    min-height: 798px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.85;
    z-index: -1;
  }

  .hero-content {
    position: absolute;
    top: 214px;
    left: 330px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: flex-start;
  }

  .eyebrow {
    display: inline-flex;
    align-items: center;
    height: 24px;
    padding: 0 15px;
    background: #ffcc4a;
    color: #181818;
    font-family: "Lato", sans-serif;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 2.32px;
    border-radius: 20px;
  }

  .title-box {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    border-radius: 29px;
    padding: 48px 60px 58px 60px;
  }

  .title {
    font-family: "Cabin", sans-serif;
    font-weight: 700;
    font-size: 50px;
    line-height: 1.16;
    color: #181818;
    max-width: 668px;
    margin: 0;
  }

  .title span {
    display: block;
    white-space: nowrap;
  }

  @media (max-width: 900px) {
    .hero-content {
      left: 60px;
      top: 160px;
    }

    .title {
      font-size: 42px;
    }

    .title-box {
      padding: 36px 44px 46px;
      border-radius: 24px;
    }
  }

  @media (max-width: 600px) {
    .hero-content {
      left: 20px;
      top: 120px;
    }

    .title {
      font-size: 34px;
    }

    .eyebrow {
      font-size: 14px;
      height: 22px;
      padding: 0 12px;
      letter-spacing: 2px;
    }

    .title-box {
      padding: 28px;
      border-radius: 20px;
    }
  }
</style>
