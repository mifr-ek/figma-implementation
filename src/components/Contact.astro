---
import PhoneIcon from "/src/icons/phone.svg";
import ClockIcon from "src/icons/clock.svg";
import PinIcon from "/src/icons/pin.svg";

import imgMain from "../data/images/contact1.png?url";
import imgTopRight from "../data/images/contact2.png?url";
import imgBottomRight from "../data/images/contact3.jpg?url";
---

<section class="contact" aria-labelledby="contact-title">
  <div class="wrap">
    <div class="info">
      <p class="eyebrow">PROCESS</p>
      <h2 id="contact-title" class="title">Contact Us. It’s Easy.</h2>
      <p class="lede">
        Leverage agile frameworks to provide a robust synopsis for high level
        overviews. Iterative approaches to corporate strategy foster
        collaborative.
      </p>

      <ul class="list" role="list">
        <li class="row">
          <span class="icon icon--phone"><PhoneIcon class="svg" /></span>
          <div class="row-text">
            <span class="row-label">Call Today</span>
            <span class="row-value">+1 800 100 900</span>
          </div>
        </li>
        <li class="row">
          <span class="icon icon--clock"><ClockIcon class="svg" /></span>
          <div class="row-text">
            <span class="row-label">Monday To Friday</span>
            <span class="row-value">9AM – 5PM</span>
          </div>
        </li>
        <li class="row">
          <span class="icon icon--pin"><PinIcon class="svg" /></span>
          <div class="row-text">
            <span class="row-label">USA Office</span>
            <span class="row-value">195 Devonshire St Boston, MA 02110</span>
          </div>
        </li>
      </ul>
    </div>

    <div class="media">
      <figure class="card card--main">
        <img src={imgMain} alt="" />
      </figure>

      <figure class="card card--top">
        <img src={imgTopRight} alt="" />
      </figure>

      <figure class="card card--bottom">
        <img src={imgBottomRight} alt="" />
      </figure>

      <i class="dots" aria-hidden="true"></i>
    </div>
  </div>
</section>

<style>
  :root {
    --black: #181818;
    --text: #595566;
    --eyebrow: #8c8c8c;
    --phone-fill: #ffe5a2;
    --clock-fill: #dff0d6;
    --pin-fill: #eaeaea;
    --green: #4aeda4;
  }

  .contact {
    background: #fff;
    padding: 120px 0 80px;
  }

  .wrap {
    width: min(1200px, 90%);
    margin-inline: auto;
    display: grid;
    grid-template-columns: 620px 1fr;
    align-items: start;
    gap: 69px;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .eyebrow {
    margin: 0;
    font:
      600 13px/1 Lato,
      sans-serif;
    letter-spacing: 0.18em;
    color: var(--eyebrow);
  }
  .title {
    margin: 0;
    font-family: "Cabin", sans-serif;
    font-size: 45px;
    font-weight: 700;
    line-height: 1.16;
    color: var(--black);
    white-space: nowrap;
  }
  .lede {
    margin: 0 0 10px;
    font:
      400 16px/1.475 Lato,
      sans-serif;
    color: var(--text);
    max-width: 487px;
  }
  .list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 38px;
  }
  .row {
    display: grid;
    grid-template-columns: 52px 1fr;
    align-items: center;
    gap: 18px;
  }
  .icon {
    inline-size: 52px;
    block-size: 52px;
    border-radius: 50%;
    display: grid;
    place-items: center;
  }
  .icon--phone {
    background: var(--phone-fill);
  }
  .icon--clock {
    background: var(--clock-fill);
  }
  .icon--pin {
    background: var(--pin-fill);
  }
  .svg {
    width: 20px;
    height: 20px;
    display: block;
  }
  .row-text {
    display: grid;
    gap: 2px;
  }
  .row-label {
    font:
      600 14px/1 Lato,
      sans-serif;
    color: var(--text);
  }
  .row-value {
    font:
      700 18px/1.25 Cabin,
      sans-serif;
    color: var(--black);
    letter-spacing: 0.2px;
  }

  .media {
    position: relative;
    --gap: 47px;
    --col: clamp(240px, (100% - var(--gap)) / 2, 410px);

    display: grid;
    grid-template-columns: var(--col) var(--col);
    grid-template-rows: auto auto;
    column-gap: var(--gap);
    row-gap: var(--gap);

    width: 100%;
    max-width: 100%;
    justify-content: end;
  }

  .card {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    width: 100%;
  }
  .card img {
    display: block;
    width: 100%;
    height: 100% !important;
    object-fit: cover;
    border-radius: 20px;
  }

  .card--main {
    grid-column: 1 / 2;
    grid-row: 1 / 3;
    height: 509px;
  }
  .card--main::before {
    content: "";
    position: absolute;
    left: 20px;
    bottom: 20px;
    width: 164px;
    height: 307px;
    background: var(--green);
    border-radius: 20px;
    z-index: 0;
  }
  .card--main img {
    position: relative;
    z-index: 1;
  }

  .card--top {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
    height: 273px;
  }

  .card--bottom {
    grid-column: 2 / 3;
    grid-row: 2 / 3;
    height: 265px;
  }

  .dots {
    position: absolute;
    top: -18px;
    right: 0;
    width: 200px;
    height: 200px;
    background-image: radial-gradient(currentColor 1.2px, transparent 1.2px);
    background-size: 14px 14px;
    color: rgba(0, 0, 0, 0.15);
    z-index: -1;
    pointer-events: none;
  }

  @media (max-width: 1100px) {
    .wrap {
      grid-template-columns: 1fr;
      gap: 48px;
    }
    .title {
      white-space: normal;
    }
    .media {
      --gap: 24px;
      --col: clamp(200px, (100% - var(--gap)) / 2, 410px);
      justify-content: center;
    }
    .card--main {
      height: 400px;
    }
    .card--top {
      height: 260px;
    }
    .card--bottom {
      height: 230px;
    }
  }

  @media (max-width: 640px) {
    .contact {
      padding: 80px 0 64px;
    }
    .title {
      font-size: 34px;
    }
    .media {
      grid-template-columns: 1fr;
      --gap: 20px;
    }
    .card--main,
    .card--top,
    .card--bottom {
      width: 100%;
      height: auto;
      aspect-ratio: 4/3;
    }
    .card--main::before {
      left: 15px;
      bottom: 15px;
      width: 120px;
      height: 220px;
    }
  }

  @media (min-width: 1200px) {
    .wrap {
      grid-template-columns: 560px 1fr;
    }
    .title {
      font-size: 45px;
      white-space: nowrap;
    }
  }
</style>
