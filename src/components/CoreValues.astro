---
import Button from "@components/Button.astro";
import data from "@data/coreValues.json";

const { title, subtitle, button, values } = data;
---

<section class="core-values" aria-labelledby="core-values-title">
  <div class="container">
    <header class="core-values__header">
      <p class="core-values__eyebrow">GROWING WITH OUR CLIENTS</p>
      <div class="core-values__top">
        <h2 id="core-values-title" class="core-values__title">{title}</h2>
        <Button
          label={button.text}
          href={button.link}
          variant="light"
          size="hero"
          ariaLabel={button.text}
        />
      </div>
      <p class="core-values__subtitle">{subtitle}</p>
    </header>

    <div class="core-values__grid">
      {
        values.map((item) => (
          <article class="core-card">
            <div class="core-card__icon">
              <img
                src={`/src/icons/${item.icon}.svg`}
                alt=""
                width="48"
                height="48"
              />
            </div>
            <h3 class="core-card__title">{item.title}</h3>
            <p class="core-card__desc">{item.description}</p>
            <a href={item.link.url} class="core-card__link">
              {item.link.text}
              <img
                src="/src/icons/arrow--right.svg"
                alt=""
                class="core-card__arrow"
                width="16"
                height="16"
              />
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  @layer components {
    .core-values {
      background-color: #181818;
      color: #fff;
      padding: 100px 0;
    }

    .container {
      width: min(1200px, 90%);
      margin-inline: auto;
    }

    .core-values__header {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-bottom: 60px;
    }

    .core-values__eyebrow {
      text-transform: uppercase;
      letter-spacing: 2px;
      font-size: 13px;
      font-weight: 500;
      color: #bcbcbc;
    }

    .core-values__top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 16px;
    }

    .core-values__title {
      font-size: 42px;
      font-weight: 700;
      color: #fff;
      line-height: 1.2;
    }

    .core-values__subtitle {
      font-size: 16px;
      color: #ccc;
      line-height: 1.6;
      max-width: 720px;
    }

    .core-values__grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 36px;
      margin-top: 40px;
    }

    .core-card {
      background: #f5f5f5;
      border: 1px solid #eaeaea;
      border-radius: 20px;
      color: #181818;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 36px 28px;
    }

    .core-card__icon {
      background: #181818;
      border: 2px solid #f5f5f5;
      border-radius: 50%;
      width: 52px;
      height: 52px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
    }

    .core-card__icon img {
      filter: brightness(0) invert(1);
      width: 24px;
      height: 24px;
    }

    .core-card__title {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .core-card__desc {
      font-size: 15px;
      line-height: 1.6;
      color: #555;
      margin-bottom: 24px;
    }

    .core-card__link {
      margin-top: auto;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-weight: 600;
      font-size: 15px;
      text-decoration: none;
      color: #181818;
      transition: color 0.2s ease;
    }

    .core-card__arrow {
      width: 14px;
      height: 14px;
      transition: transform 0.2s ease;
    }

    .core-card__link:hover .core-card__arrow {
      transform: translateX(4px);
    }

    @media (max-width: 768px) {
      .core-values {
        padding: 80px 0;
      }

      .core-values__title {
        font-size: 34px;
      }

      .core-values__grid {
        gap: 28px;
      }
    }
  }
</style>
