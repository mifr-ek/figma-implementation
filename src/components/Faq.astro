---
import data from "../data/faq.json";
const { faq } = data;
---

<section class="faq" aria-labelledby="faq-title">
  <div class="wrap">
    <div class="panel">
      <p class="eyebrow">FAQ</p>

      <h2 id="faq-title" class="title">Customer Questions</h2>

      <div class="list" role="list">
        {
          faq.map((item, i) => (
            <details class="item" {...(i === 0 ? { open: true } : {})}>
              <summary class="row">
                <span class="q">{item.question}</span>
                <span class="icon" aria-hidden="true" />
              </summary>

              <div class="answer">
                {item.answer.split("\n\n").map((para) => (
                  <p>{para}</p>
                ))}
              </div>
            </details>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --black: #181818;
    --text: #595566;
    --muted: #dadada;
    --panel: #f5f5f5;
    --radius: 30px;
  }

  .faq {
    background: #fff;
    padding: 80px 0 150px;
  }
  .wrap {
    width: min(1200px, 90%);
    margin-inline: auto;
  }

  .panel {
    background: var(--panel);
    border-radius: var(--radius);
    padding: 151px 236px;
  }

  .eyebrow {
    margin: 0 0 12px;
    text-align: center;
    font:
      400 16px/1 "Lato",
      system-ui,
      sans-serif;
    letter-spacing: 2.32px;
    text-transform: uppercase;
    color: var(--black);
  }
  .title {
    margin: 0 0 40px;
    text-align: center;
    font:
      700 45px/1.16 "Cabin",
      sans-serif;
    color: var(--black);
  }

  .list {
    width: min(720px, 100%);
    margin-inline: auto;
    display: grid;
    gap: 40px;
  }

  .item {
    border-bottom: 1px solid var(--muted);
    padding-bottom: 0;
  }
  .item:last-child {
    border-bottom: 0;
  }

  .row {
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    cursor: pointer;
  }
  .row::-webkit-details-marker {
    display: none;
  }

  .q {
    display: block;
    color: var(--black);
    font:
      500 20px/1.16 "Cabin",
      sans-serif;
  }

  .icon {
    position: relative;
    inline-size: 17.2px;
    block-size: 17.2px;
    flex: 0 0 auto;
  }
  .icon::before,
  .icon::after {
    content: "";
    position: absolute;
    inset: 0;
    margin: auto;
    background: var(--black);
    border-radius: 1px;
    transition:
      opacity 0.12s ease,
      transform 0.12s ease;
  }

  .icon::before {
    width: 100%;
    height: 2px;
  }
  .icon::after {
    width: 2px;
    height: 100%;
  }
  details[open] .icon::after {
    opacity: 0;
    transform: scaleY(0.6);
  }

  .answer {
    padding: 16px 0 24px;
  }
  .answer p {
    margin: 0 0 14px;
    color: var(--text);
    font:
      400 16px/1.475 "Lato",
      system-ui,
      sans-serif;
  }
  .answer p:last-child {
    margin-bottom: 0;
  }

  .item[open] {
    border-bottom-color: transparent;
  }
  .item[open] .answer {
    border-bottom: 1px solid var(--muted);
  }

  @media (max-width: 1200px) {
    .panel {
      padding: 80px 48px;
    }
  }
  @media (max-width: 640px) {
    .title {
      font-size: 34px;
    }
    .list {
      gap: 32px;
    }
    .q {
      font-size: 18px;
    }
  }
</style>
