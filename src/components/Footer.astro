<style>
  @layer components {
    .site-footer {
      background: #181818;
      width: 100%;
    }

    .footer-wrap {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 36px;
      padding: 46px 0;
      max-width: 1200px;
      margin-inline: auto;
    }

    .brand {
      color: #fff;
      font-family: "Cabin", system-ui, sans-serif;
      font-size: 30px;
      font-weight: 600;
      line-height: 105%;
    }

    .rule {
      width: min(1200px, 100%);
      height: 1px;
      background: #707070;
    }

    .legal {
      margin: 0;
      color: #ffffff;
      font-family: "Lato", system-ui, sans-serif;
      font-size: 16px;
      font-weight: 400;
      line-height: 147.5%;
      text-align: center;
    }
    .legal a {
      color: #ffffff;
      text-decoration: none;
    }
    .legal a:hover {
      text-decoration: underline;
    }
  }
</style>
