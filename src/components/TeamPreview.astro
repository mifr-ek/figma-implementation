---
import data from "@data/employees.json";

const people = (data?.employees ?? []).slice(0, 3);
---

<section class="team-prev" aria-labelledby="team-prev-title">
  <div class="wrap">
    <header class="head">
      <h2 id="team-prev-title">People who make it happen</h2>
      <a class="link" href="/team">Meet the team â†’</a>
    </header>

    <ul class="grid" role="list">
      {
        people.map((p) => (
          <li class="card">
            <figure class="ph">
              <img
                src={`/src/data/images/${p.avatar ?? "john.webp"}`}
                alt={p.name}
                width="320"
                height="360"
                loading="lazy"
              />
            </figure>
            <div class="meta">
              <strong class="name">{p.name}</strong>
              <span class="role">{p.role}</span>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  @layer components {
    .team-prev {
      background: #fff;
      padding: 40px 0 96px;
    }
    .wrap {
      width: min(1200px, 90%);
      margin-inline: auto;
    }
    .head {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      gap: 16px;
      margin-bottom: 22px;
    }
    .head h2 {
      margin: 0;
      font:
        700 28px/1.16 "Cabin",
        sans-serif;
      color: #181818;
    }
    .link {
      color: #181818;
      text-decoration: none;
      font:
        600 15px/1 "Lato",
        system-ui,
        sans-serif;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 20px;
      padding: 0;
      margin: 0;
      list-style: none;
    }
    .card {
      display: grid;
      gap: 10px;
    }
    .ph {
      border-radius: 16px;
      overflow: hidden;
      aspect-ratio: 4/5;
      background: #eee;
    }
    .ph img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .meta {
      display: grid;
      gap: 2px;
    }
    .name {
      color: #181818;
    }
    .role {
      color: #595566;
      font:
        600 14px/1 "Lato",
        system-ui,
        sans-serif;
    }

    @media (max-width: 820px) {
      .grid {
        grid-template-columns: 1fr 1fr;
      }
    }
    @media (max-width: 520px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }
  }
</style>
